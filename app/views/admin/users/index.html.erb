<p id="notice"><%= notice %></p>

<h1>Propietarios</h1>

<table class='table table-bordered datatable'>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Deuda</th>
      <th>Teléfonos</th>
      <th>Cantidad de propiedades</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td>$<%= user.debt.round(0) %></td>
        <td><%= user.phones %></td>
        <td><%= user.properties.size %></td>
        <td><%= link_to 'Nuevo Pago', new_admin_payment_path(user_id: user.id) %></td>
        <td><%= link_to 'Editar', edit_admin_user_path(user) %></td>
        <td><%= link_to 'Eliminar', [:admin, user], method: :delete, data: { confirm: 'Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

