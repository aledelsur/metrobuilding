<h1>Nuevo Pago de <%= @payment.user.name %></h1>

<% if params[:payment_type] == 'cuota' %>

  <h3 class='red-info'>
    Deuda actual <b>de cuotas</b> del propietario: <%= @payment.user&.debt&.round %> (pesos)
  </h3>

<% elsif params[:payment_type] == 'deuda_dolares' %>
  <h3 class='red-info'>
    Deuda actual <b>especial en dólares</b> del propietario: <%= @payment.user&.special_debt(:dolares)&.round %> (dólares)
  </h3>
<% elsif params[:payment_type] == 'deuda_pesos' %>
  <h3 class='red-info'>
    Deuda actual <b>especial en pesos</b> del propietario: <%= @payment.user&.special_debt(:pesos)&.round %> (pesos)
  </h3>
<% end %>


<% @properties.each do |property| %>
  <div class='col-xs-12'><div class='separator'></div></div>
  <div class='col-xs-6'>
    <h3> <%= property.name %> </h3>
  </div>
  <div class='col-xs-6'>
    <%= render 'form', payment: @payment, property: property %>
  </div>
  <div class='col-xs-12'>
    <div class='separator'></div>
  </div>
<% end %>

<br>
<%= link_to 'Atrás', admin_payments_path, class: 'btn btn-default' %>
