<h1>Grupos</h1>
<br>
<% if @groups.empty? %>
  <div>No hay grupos creados.</div>
<% else %>
  <table class="table table-bordered <%= add_datatable_class_to_groups(current_admin_user) %>">
    <thead>
      <tr>
        <th>Nombre</th>
        <% unless current_admin_user.is_readonly? %>
          <th></th>
          <th></th>
          <th></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% @groups.each do |group| %>
        <tr>
          <td><%= group.name %></td>
          <% unless current_admin_user.is_readonly? %>
            <td><%= link_to 'Administrar grupo', admin_group_users_path(group), class: 'btn btn-default' %></td>
            <td><%= link_to 'Editar', edit_admin_group_path(group), class: 'btn btn-default' %></td>
            <td><%= link_to 'Eliminar', [:admin, group], method: :delete, data: { confirm: 'EstÃ¡s seguro?' }, class: 'btn btn-danger' %></td>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
<% end %>
<br>
<% unless current_admin_user.is_readonly? %>
  <%= link_to 'Nuevo Grupo', new_admin_group_path, class: 'btn btn-primary' %>
<% end %>
