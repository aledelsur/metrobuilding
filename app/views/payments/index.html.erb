<h1>Pagos</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Monto</th>
      <th>Estado</th>
      <th>Vencimiento</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @payments.each do |payment| %>
      <tr>
        <td><%= payment.value %></td>
        <td><%= payment.state %></td>
        <td><%= payment.due_date %></td>
        <td><%= link_to 'Ver', payment %></td>
        <td><%= link_to 'Editar', edit_payment_path(payment) %></td>
        <td><%= link_to 'Eliminar', payment, method: :delete, data: { confirm: 'EstÃ¡s seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

